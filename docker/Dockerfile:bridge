# ------- messsage defininitions for foxglove-bridge --------

FROM kan-rt.ddns.net:8929/docker/ros-mower:mower-core

RUN apt-get update && apt-get install -y ros-noetic-gazebo-msgs ros-noetic-navigation

RUN apt-get update && apt-get install -y ros-$ROS_DISTRO-foxglove-bridge ros-noetic-foxglove-msgs
RUN apt-get update && apt-get install -y ros-noetic-hector-gazebo-plugins
RUN apt-get update && apt-get install -y ros-noetic-rosbridge-suite
